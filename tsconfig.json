{
    "compilerOptions": {
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": true,
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "allowJs": true,
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
